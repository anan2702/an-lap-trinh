    <script>
        function openLinks() {
            const input = document.getElementById("linksArea").value.trim();
            if (input === "") {
                alert("B·∫°n ch∆∞a nh·∫≠p li√™n k·∫øt!");
                return;
            }

            const links = input.split("\n");

            links.forEach(link => {
                let url = link.trim();
                if (!url) return;

                if (!url.startsWith("http://") && !url.startsWith("https://")) {
                    url = "https://" + url;
                }

                window.open(url, "_blank");
            });
        }
    </script>

